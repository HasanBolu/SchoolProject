@model List<SchoolProject.Models.SchoolDbContext.Student>;
@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>
<button data-target="#modal-student" data-toggle="modal" class="btn btn-success" style="margin-top: 15px;margin-bottom: 15px;">Add Student</button>


<table id="student-table" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>Student Name</th>
            <th>Password</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Snum</td>
                <td>@student.Sname</td>
                <td>@student.Password</td>
                <td><a href="/Home/DeleteStudent?snum=@student.Snum" class="btn btn-danger">Delete</a></td>
            </tr>   
        }
    </tbody>
</table>


<div class="modal fade" id="modal-student" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Student</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" action="/Home/AddStudent">
                    <div class="form-group">
                        <label for="Sname">Student Name:</label>
                        <input type="text" class="form-control" id="Sname" name="Sname" aria-describedby="emailHelp" placeholder="" required>
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input type="text" class="form-control" id="Password" name="Password" placeholder="" required>
                    </div>
                    <div class="form-group">
                        <label for="Snum">Student Number:</label>
                        <input type="number" class="form-control" name="Snum" id="Snum" placeholder="" required>
                    </div>
                    <button id="submit-supply" type="submit" class="btn btn-success">Create</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script>
    $('#student-table').DataTable();
    
</script>
