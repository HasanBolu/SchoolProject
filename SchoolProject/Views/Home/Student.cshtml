@model List<SchoolProject.Models.SchoolDbContext.Student>;
@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Öğrenciler</h2>
<button data-target="#modal-student" data-toggle="modal" class="btn btn-success" style="margin-top: 15px;margin-bottom: 15px;">Öğrenci Ekle</button>


<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>Student Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Snum</td>
                <td>@student.Sname</td>
                <td></td>
            </tr>   
        }
    </tbody>
</table>


<div class="modal fade" id="modal-student" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Öğrenci Ekle</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="name">Ad:</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="">
                </div>
                <div class="form-group">
                    <label for="lname">Password:</label>
                    <input type="text" class="form-control" id="lname" name="lname" placeholder="">
                </div>
                <div class="form-group">
                    <label for="identity">Student Number:</label>
                    <input type="number" class="form-control" name="identity" id="identity" placeholder="">
                </div>
                <button id="submit-supply" type="submit" class="btn btn-success">Ekle</button>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
            </div>
        </div>

    </div>
</div>

<script>
    $('#example').DataTable();
</script>
